{
    "directory": "./",
    "remote": {
        "host": "google.com",
        "port": 80
    },
    "proxy": {
        "host": "localhost",
        "port": 9001
    },
    "server": {
        "host": "localhost",
        "port": 9000
    },
    "headers": {
        "Host": "remote-api-host.com",
        "X-Secret" : "awesome"
    },
    "bounceToRemote": false,
    "bounces" : [
        "public/.*",
        "assets/.*"
    ],
    "mapping": true,
    "mappings": {
        ".*/api/users/1/remove": {"result": "ok"},
        ".*/api/users/.*":"./test/mocks/users-mock.json",
        ".*/public/js/awesome.js":"./remote.json",
        ".*/img/.*":"./",
        ".*/api/pvt/.*":"http://google.com"
    }
}
